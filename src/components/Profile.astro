---
import Image from "astro/components/Image.astro";
import logo from "../assets/images/logo.svg";
import Check from "../assets/icons/Check.astro";
import BadgeCheck from "../assets/icons/BadgeCheck.astro";
---

<section class="container mx-auto px-4 flex flex-col gap-2 mt-[-4rem]">
  <div
    class="bg-white w-32 h-32 rounded-full flex justify-center items-center relative dark:bg-slate-800"
  >
    <Image src={logo} alt="Profile" class="rounded-full w-full" />
    <span
      class="absolute text-xs font-normal px-2 bg-[#F9F5F1] rounded-xl bottom-0 flex items-center gap-1 border border-black dark:bg-zinc-700"
    >
      <Check />
      Open to work
    </span>
  </div>
  <h1 class="text-2xl font-extrabold flex items-center gap-1">
    Andrés Beltrán <BadgeCheck />
  </h1>
  <p class="text-sm max-w-96 inline-block">
    🚀 Ingeniero de Software / Desarrollador Full-Stack / Apasionado por
    Construir Software / Enfocado en el Frontend (⚛️ React js) y aprendiendo
    Next js 🧭
  </p>
  <div class="inline-flex flex-col items-start">
    <p class="text-sm inline-block">📍 Guadalajara, Jalisco. México</p>
    <a
      href="mailto:4ndresdev@gmail.com"
      class="text-sm text-blue-500 hover:text-blue-700"
      >📭 4ndresdev@gmail.com</a
    >
  </div>
</section>
